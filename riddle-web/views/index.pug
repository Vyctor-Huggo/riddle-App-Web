extends layout

block content
  if mainText
    p.main-text #{mainText}

  if mainImage
    img(src=mainImage, title=altMainImg, class="main-img")

  button#adivinhar-btn.btn-fixed
    span Adivinhar

  if tip
    p.tip #{tip}

  script.
    const btn = document.getElementById('adivinhar-btn');
    btn.addEventListener('click', () => {
      const userAnswer = prompt('Digite sua resposta:');
      if (userAnswer !== null) {
        const correctAnswer = !{JSON.stringify(response)};
        const nextPage = !{JSON.stringify(nextPage)};
        if (userAnswer.trim().toLowerCase() === correctAnswer.toLowerCase()) {
          alert('Parab√©ns! Resposta correta!');
          window.location.href = nextPage;
        } else {
          alert('Resposta incorreta. Tente novamente.');
        }
      }
    });
